<div class="recipes-panel p-2">
  <div class="is-flex is-flex-direction-row is-flex-wrap-nowrap is-justify-content-space-between is-align-items-center my-3 px-2">
    <h1 class="p-0 m-0 has-text-primary-light">Cookbook</h1>
    <%=
      link_to new_cookbook_recipe_path,
              class: 'button is-link',
              data: {
                turbo: true,
                'turbo-frame': :main_display,
              } do %>
      <span class="icon">
        <i class="fas fa-plus"></i>
      </span>
    <% end %>
  </div>

  <%= turbo_stream_from :cookbook_recipes %>
  <%= turbo_frame_tag :cookbook_recipes,
                      src: cookbook_recipes_path,
                      class: 'recipe-collection px-2 pb-2' do %>
    <span>Loading...</span>
  <% end %>
</div>
<div class="cookbook-page">
  <%= turbo_frame_tag :main_display,
                      src: new_cookbook_recipe_path,
                      data: {
                        action: 'turbo:frame-render->cookbook#setActiveRecipe',
                        'cookbook-target': 'mainContent'
                      },
                      class: 'main-display' do %>
    <span>Loading...</span>
  <% end %>
</div>
