<p id="notice"><%= notice %></p>

<h1>Cookbook Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Preparion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cookbook_recipes.each do |cookbook_recipe| %>
      <tr>
        <td><%= cookbook_recipe.name %></td>
        <td><%= cookbook_recipe.description %></td>
        <td><%= cookbook_recipe.preparion %></td>
        <td><%= link_to 'Show', cookbook_recipe %></td>
        <td><%= link_to 'Edit', edit_cookbook_recipe_path(cookbook_recipe) %></td>
        <td><%= link_to 'Destroy', cookbook_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cookbook Recipe', new_cookbook_recipe_path %>
