<% is_active ||= false %>

<%= turbo_frame_tag dom_id(recipe), class: 'mb-2' do %>
  <%= link_to cookbook_recipe_path(recipe),
              class: 'is-block',
              data: {
                cookbook_target: 'recipe',
                id: recipe.id.to_s,
                turbo: true,
                turbo_frame: :main_display } do %>
    <div class="message is-small <%= 'is-link' if is_active %>">
      <div class="message-body">
        <h4 class="title is-5 is-link"><%= recipe.name %></h4>
        <p class="subtitle is-6">
          <% if recipe.description.present? %>
            <%= recipe.description %>
          <% else %>
            <i><%= t('models.recipe.empty.description') %></i>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
