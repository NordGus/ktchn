<%= turbo_frame_tag :main_display do %>
  <div
    class="is-hidden"
    data-id="<%= @recipe.id %>"
    data-cookbook-target="contentMeta">
  </div>

  <div class="block">
    <h1 class="title is-1">Editing: <%= @recipe.name %></h1>
  </div>

  <%= render layout: 'form', locals: { recipe: @recipe } do %>
    <%= link_to 'Back', @recipe, class: 'button' %>
  <% end %>
<% end %>