<% root_view ||= false %>
<% in_root = root_view ? 'in-root' : '' %>
<% icon_size = root_view ? 'fa-4x' : 'fa-2x' %>

<div class="nav <%= in_root %>">
  <%= link_to cookbook_path, class: nav_link_styles(:cookbook) do %>
    <span class="section-icon">
      <span class="icon">
        <i class="fas fa-book-open <%= icon_size %>"></i>
      </span>
    </span>
    <span>Cookbook</span>
  <% end %>
  <%= link_to cookbook_path, class: nav_link_styles(:menu) do %>
    <span class="section-icon">
      <span class="icon">
        <i class="fas fa-calendar <%= icon_size %>"></i>
      </span>
    </span>
    <span>Diet</span>
  <% end %>
  <%= link_to cookbook_path, class: nav_link_styles(:shopping_list) do %>
    <span class="section-icon">
      <span class="icon">
        <i class="fas fa-shopping-cart <%= icon_size %>"></i>
      </span>
    </span>
    <span>List</span>
  <% end %>
</div>